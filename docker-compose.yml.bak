# Use root/example as user/password credentials
version: '3.1'

services:

  db:
    image: mysql
    command: --default-authentication-plugin=mysql_native_password
    ports:
      - 3306:3306
    environment:
      MYSQL_ROOT_PASSWORD: example
      MYSQL_DATABASE: somedb

  phpmyadmin:
    image: phpmyadmin
    ports:
      - 8080:80
    environment:
        - PMA_HOST: db
        - PMA_USER: root
        - PMA_PASSWORD: example